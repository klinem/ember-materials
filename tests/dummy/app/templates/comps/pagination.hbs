            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="md-pagination-container">
        {{md-pagination page=page itemCount=itemCount perPage=perPage overflow=2 onPage=(action "changePage")}}
      </div>
    </div>
  </div>
</section>
