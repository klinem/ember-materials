<section class="doc-section">
  <h2 class="doc-section-title">
    Examples
  </h2>

  <div class="doc-example">
    <div class="doc-example-body pad-20">
      <div class="md-card">
        <table class="md-table">
          <tbody>
            {{#each paged as |t|}}
              <tr>
                <td>{{t.name}}</td>
                <td class="text-right">{{t.amount}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="card-footer text-right">
          {{md-pagination page=page itemCount=itemCount perPage=perPage type="mini" onPage=(action "changePage")}}
        </div>
      </div>
    </div>
  </div>

  <div class="doc-example">
    <div class="doc-example-body pad-20">
