<div class="doc-section" id="usage">
  <h2 class="doc-section-title">
    Usage
  </h2>
</div>

<div class="doc-section" id="examples">
  <h2 class="doc-section-title">
    Examples
  </h2>

  <div class="doc-example">
    <div class="md-card">
      <div class="card-body">

        <span>Gender: <strong>{{gender}}</strong></span>

        {{#md-radio-group model=gender}}
          {{#md-radio value="male"}}
            Male
          {{/md-radio}}
          {{#md-radio value="female"}}
            Female
          {{/md-radio}}
        {{/md-radio-group}}

        <span>Number: <strong>{{number}}</strong></span>

        {{#md-radio-group model=number}}
          {{#md-radio value="one"}}
            One
          {{/md-radio}}
          {{#md-radio value="two"}}
            Two
          {{/md-radio}}
          {{#md-radio value="three" disabled=true}}
            Three
          {{/md-radio}}
        {{/md-radio-group}}
      </div>
    </div>
  </div>
</div>
